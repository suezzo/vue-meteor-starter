{
  "plugins": ["plugins/markdown", "plugins/summarize"],
  "markdown": {
    "parser": "gfm"
  },
    "recurseDepth": 10,
    "source": {
      "include": ["imports"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "opts": {
      "destination": "./.docs/"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
